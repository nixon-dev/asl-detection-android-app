<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:layout_height="wrap_content"
    android:accessibilityLiveRegion="none"
    android:background="#80101010"
    android:gravity="center_horizontal"  android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/overlayImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#33FFFFFF"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <TextView
        android:id="@+id/inferenceTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#99000000"
        android:padding="2dp"
        android:text="Inference: 0ms"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/detectedObjectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#99000000"
        android:padding="4dp"
        android:text="Detecting Sign Language..."
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/stopOverlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Stop Capture"
        android:visibility="gone" />

</LinearLayout>